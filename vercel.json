{
  "version": 2,
  "builds": [
    {
      "src": "/backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "/frontend",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "tsc && vite build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/backend/server.js"
    }
  ]
}
